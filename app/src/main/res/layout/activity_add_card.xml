<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_add_card_scene"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="121dp"
        android:layout_height="141dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cancel_x"
        app:srcCompat="@drawable/cancel_x"/>

    <ImageView
        android:id="@+id/save_button"
        android:layout_width="121dp"
        android:layout_height="141dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:src="@drawable/save_button"
        app:srcCompat="@drawable/save_button"/>

    <EditText
        android:id="@+id/textQuestion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter the Question Here"/>

    <EditText
        android:id="@+id/textAnswer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Enter the Answer Here" />

</RelativeLayout>